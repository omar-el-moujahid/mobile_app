<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" tools:context=".PageAchat" android:orientation="vertical" android:layout_margin="4dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_horizontal" android:orientation="horizontal">
                <ImageView android:id="@+id/FlesheImage" android:layout_width="40dp" android:layout_height="35dp" android:layout_marginLeft="6dp" android:layout_marginTop="28dp" android:layout_marginRight="8dp" android:clickable="true" android:rotation="-180" android:rotationX="-360" android:rotationY="-360" app:srcCompat="@drawable/baseline_trending_flat_24"/>
                <RelativeLayout android:layout_width="280dp" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:background="@drawable/search_box_background">

                    <ImageView
                        android:id="@+id/searchIcon"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/baseline_search_24"
                        app:tint="#7F7C7C" />
                    <ImageView android:id="@+id/searchIcon2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentEnd="true" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_marginEnd="16dp" android:src="@drawable/baseline_search_24"/>
                    <EditText android:id="@+id/searchEditText" android:layout_width="100dp" android:layout_height="40dp" android:layout_alignEnd="@+id/searchIcon2" android:layout_centerVertical="true" android:layout_marginStart="8dp" android:layout_marginEnd="31dp" android:layout_toEndOf="@+id/searchIcon" android:background="@android:color/transparent" android:hint="Rechercher" android:paddingStart="8dp" android:paddingEnd="8dp" android:textColorHint="@color/grey"/>
                </RelativeLayout>
                <ImageView android:id="@+id/PanierImage" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="8dp" android:layout_marginTop="30dp" app:srcCompat="@drawable/panier"/>
            </LinearLayout>
            <ImageView android:id="@+id/imagePrincipale" android:layout_marginTop="10dp" android:layout_width="match_parent" android:layout_height="550dp" android:src="@drawable/img1" android:layout_marginBottom="3dp"/>
            <TextView android:id="@+id/prix" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2000.00 Dh" android:textStyle="bold" android:textSize="18dp" android:layout_marginLeft="20dp"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView android:id="@+id/description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Description de l'article et son qualitÃ©"/>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="horizontal" android:layout_marginRight="20dp" android:gravity="end">
                    <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/baseline_star_24"/>
                    <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/baseline_star_24"/>
                    <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/baseline_star_24"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Taille" android:textStyle="bold" android:layout_margin="14dp" android:textSize="20dp"/>

            <LinearLayout
                android:id="@+id/linearToChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@drawable/search_box_background"
                    android:backgroundTint="#2F2F2F"
                    android:padding="8dp"
                    android:text="XXS"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@drawable/search_box_background"
                    android:padding="8dp"
                    android:text="XS"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@drawable/search_box_background"
                    android:padding="8dp"
                    android:text="S"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/t4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@drawable/search_box_background"
                    android:padding="8dp"
                    android:text="M"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/t5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@drawable/search_box_background"
                    android:padding="8dp"
                    android:text="L"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/t6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@drawable/search_box_background"
                    android:padding="8dp"
                    android:text="XL"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/t7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@drawable/search_box_background"
                    android:padding="8dp"
                    android:text="XXL"
                    android:textSize="16dp" />

            </LinearLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_marginRight="5dp" android:layout_marginLeft="5dp" android:background="@drawable/search_box_background">
                <EditText android:id="@+id/Commentaire" android:layout_width="match_parent" android:layout_height="150dp" android:layout_marginStart="8dp" android:layout_marginEnd="31dp" android:background="@android:color/transparent" android:hint=" Commentaire..." android:paddingStart="8dp" android:paddingEnd="8dp" android:gravity="top|start" android:textColorHint="@color/grey"/>
            </RelativeLayout>
            <Button android:layout_width="match_parent" android:layout_height="60dp" android:layout_margin="5dp" android:text="Commenter" android:gravity="center" android:backgroundTint="@color/grey" android:textColor="@color/dark_grey" app:cornerRadius="0dp"/>
            <ImageView android:layout_width="60dp" android:layout_height="60dp" android:layout_margin="15dp" android:src="@drawable/applogo"/>

            <ImageView android:layout_width="match_parent" android:layout_height="150dp"/>
        </LinearLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/bottomMenu" android:layout_alignParentBottom="true" android:background="@android:color/white">
        <ImageView android:id="@+id/bottomIcon" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:layout_margin="8dp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
        <Button android:id="@+id/bottomButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp" android:layout_marginEnd="8dp" android:layout_toEndOf="@id/bottomIcon" android:backgroundTint="@color/black"
            android:text="AJOUTER AU PANIER" app:cornerRadius="0dp" app:layout_constraintStart_toEndOf="@id/bottomIcon" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>