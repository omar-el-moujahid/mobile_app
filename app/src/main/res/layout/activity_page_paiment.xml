<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="#FAF7F7"
    android:backgroundTint="#EFEDED"
    android:fillViewport="true"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".PagePaiment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="4dp"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/textView_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/reem_kufi"
            android:gravity="center"
            android:text="Paiement"
            android:textColor="#686767"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="monospace"
            android:text=" *Merci de remplir tout les champs"
            android:textColor="#F11616"
            android:textSize="11sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="360dp"
            android:layout_height="70dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/rectangle_border">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nom"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="4dp"
                android:background="#EFEDED"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawableTint="#C1BDBD"
                android:ems="10"
                android:fontFamily="@font/alegreya"
                android:hint="   Nom"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="360dp"
            android:layout_height="70dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/rectangle_border">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/prénom"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="4dp"
                android:background="#EFEDED"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawableTint="#C1BDBD"
                android:ems="10"
                android:fontFamily="@font/alegreya"
                android:hint="   Prénom"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/spinner_ville"
            android:layout_width="360dp"
            android:layout_height="70dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/rectangle_border"
            android:drawableLeft="@drawable/baseline_location_city_24"
            android:drawableTint="#C1BDBD" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="360dp"
            android:layout_height="70dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/rectangle_border"
            android:drawablePadding="3dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tel"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="4dp"
                android:background="#EFEDED"
                android:drawableLeft="@drawable/baseline_local_phone_24"
                android:drawableTint="#C1BDBD"
                android:ems="10"
                android:fontFamily="@font/alegreya"
                android:hint="   Télephone"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:text="Pour la livraison, il est nécessaire d'indique un numéro de téléphone valable"
            android:textColor="#818080" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="360dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rectangle_border">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/codepostal"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="#EFEDED"
                android:drawableLeft="@drawable/baseline_signpost_24"
                android:drawableTint="#C1BDBD"
                android:fontFamily="@font/alegreya"
                android:hint="  Code Postal" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="360dp"
            android:layout_height="70dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rectangle_border">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/adresse"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="8dp"
                android:background="#EFEDED"
                android:drawableLeft="@drawable/baseline_place_24"
                android:drawableTint="#C1BDBD"
                android:fontFamily="@font/alegreya"
                android:hint="  Ligne d'Addresse" />
        </com.google.android.material.textfield.TextInputLayout>

        <Switch
            android:id="@+id/switch_approuve"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#FFFFFF"
            android:backgroundTint="#615F5F"
            android:text="  Faire Approuver"
            android:textColor="#FFFFFF"
            android:textColorHint="#4CAF50"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:text="Nous maintenons des mesures physiques, techniques et administratives conformes aux normes de l'industrie pour protéger vos informations personnelles."
            android:textColor="#818080" />

        <LinearLayout
            android:layout_width="392dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >

            <Button
                android:id="@+id/conserver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:fontFamily="monospace"
                android:text="CONSERVER"
                android:textSize="20sp"
                app:cornerRadius="0dp" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>