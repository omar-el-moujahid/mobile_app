<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:id="@+id/drawer_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fillViewport="true"
            tools:context=".PageCustems">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/search_box_background">

                        <ImageView
                            android:id="@+id/searchIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/baseline_search_24"
                            app:tint="#A29D9D" />
                        <ImageView android:id="@+id/searchIcon2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/baseline_search_24"/>
                        <EditText android:id="@+id/searchEditText"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_alignEnd="@+id/searchIcon2"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="31dp"
                            android:layout_toEndOf="@+id/searchIcon"
                            android:background="@android:color/transparent"
                            android:hint="Rechercher"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColorHint="@color/grey"/>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:orientation="horizontal">






                </LinearLayout>
                <TextView android:id="@+id/tradition" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="3dp" android:gravity="center_horizontal" android:text="@string/phrase" android:textColor="@color/grey"/>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal"   >
                    <ImageView android:id="@+id/A3CEtpkiXwh7ml5wP1Bga" android:layout_width="145dp" android:layout_height="198dp" android:layout_margin="10dp" android:clickable="true" android:src="@drawable/img12"/>
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical">
                        <LinearLayout android:layout_width="wrap_content" android:layout_height="120dp" android:layout_marginRight="5dp" android:orientation="horizontal">
                            <ImageView android:id="@+id/AGqHcJCahCevd7HXZ0fB2" android:layout_width="90dp" android:layout_height="97dp" android:layout_marginTop="10dp" android:src="@drawable/img1" android:clickable="true"/>
                            <ImageView android:id="@+id/AfPduVqHmYWTE3XLiBcvI" android:layout_width="159dp" android:layout_height="95dp" android:layout_marginTop="10dp" android:src="@drawable/img2" android:clickable="true"/>
                        </LinearLayout>
                        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                            <ImageView android:id="@+id/AxMX21F4l9ucftE9c9bgq" android:layout_width="131dp" android:layout_height="90dp" android:clickable="true" android:src="@drawable/img3"/>
                            <ImageView android:id="@+id/A46toIuU73wU2OGaIQlC9" android:layout_width="100dp" android:layout_height="90dp" android:clickable="true" android:src="@drawable/img4"/>

                            <com.google.android.material.navigation.NavigationView
                                android:id="@+id/nav_view"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="start"
                                app:menu="@menu/drawer_menu" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/A9kVHP5iefiHdcbmqtA5Q"
                        android:layout_width="120dp"
                        android:layout_height="73dp"
                        android:clickable="true"
                        android:src="@drawable/img5" />

                    <ImageView
                        android:id="@+id/A7gUtkdJ2tlnbdvoS0KYK"
                        android:layout_width="90dp"
                        android:layout_height="71dp"
                        android:clickable="true"
                        android:src="@drawable/img6" />

                    <ImageView
                        android:id="@+id/AKjJV2Ixwtx2NtUkMmG8W"
                        android:layout_width="86dp"
                        android:layout_height="73dp"
                        android:clickable="true"
                        android:src="@drawable/img7" />

                    <ImageView
                        android:id="@+id/AGwAYZhAcwv8ZMRC2U9rF"
                        android:layout_width="99dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:src="@drawable/img8" />
                </LinearLayout>

                <LinearLayout android:layout_width="wrap_content" android:layout_height="210dp" android:orientation="horizontal"/>
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="10dp" android:orientation="horizontal">
                    <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                        <androidx.viewpager2.widget.ViewPager2 android:id="@+id/ViewPager" android:layout_width="match_parent" android:layout_height="match_parent"/>
                    </RelativeLayout>
                    <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                        <androidx.viewpager2.widget.ViewPager2 android:id="@+id/ViewPager1" android:layout_width="match_parent" android:layout_height="match_parent"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="10dp" android:orientation="horizontal">
                    <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                        <androidx.viewpager2.widget.ViewPager2 android:id="@+id/ViewPager2" android:layout_width="match_parent" android:layout_height="match_parent"/>
                    </RelativeLayout>
                    <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                        <androidx.viewpager2.widget.ViewPager2 android:id="@+id/ViewPager3" android:layout_width="match_parent" android:layout_height="match_parent"/>
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/text8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:gravity="center"
                    android:text="399.99 Dh" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>